@model SIMS.BDContext.Entity.Student
@{
    ViewData["Title"] = "Student Information";
	Layout = "~/Views/Shared/Layout_Student/_LayoutStudent.cshtml";
}


<h2>Student Information</h2>
<table class="table table-bordered table-striped">
    <tbody>
        <tr>
            <th>Student ID</th>
            <td>@Model.StudentID</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Date of Birth</th>
            <td>@Model.DoB?.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
			<th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>ClassName</th>
            <td>@Model.Class?.ClassName</td>
        </tr>
        <tr>
            <th>Major Name</th>
            <td>@Model.Type?.TypeName</td>
        </tr>
	</tbody>
