@model SIMS.Models.CourseViewModel

@{

    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <h2>Create Course</h2>
        <a class="btn btn-info" href="@Url.Action("Index", "Courses")">Back</a>
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">Create Course</h5>
                <form method="post" enctype="multipart/form-data" asp-controller="Courses" asp-action="Create">
                    <div class="mb-3">
                        <label asp-for="NameCourse">Course Name</label>
                        <input asp-for="NameCourse" class="form-control" type="text" />
                        <span asp-validation-for="NameCourse" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DescriptionCourse">Description</label>
                        <textarea asp-for="DescriptionCourse" class="form-control" rows="8"></textarea>
                        <span asp-validation-for="DescriptionCourse" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CreatedAt">CreatedAt Date</label>
                        <input asp-for="CreatedAt" class="form-control" type="date" value="@DateOnly.FromDateTime(DateTime.Now).ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UpdatedAt">End Date</label>
                        <input asp-for="UpdatedAt" class="form-control" type="date" />
                        <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TypeID">Vote (0-5)</label>
                        <input asp-for="TypeID" class="form-control" type="number" min="0" max="5" />
                        <span asp-validation-for="TypeID" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="TypeName" class="form-check-input" type="checkbox" checked="checked" />
                        <label asp-for="TypeName" class="form-check-label">Active</label>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>