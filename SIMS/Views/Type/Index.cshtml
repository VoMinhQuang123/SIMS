@model List<SIMS.BDContext.Entity.Type1>

@{
    ViewData["Title"] = "Type List";
    Layout = "~/Views/Shared/Layout_Admin/_layoutAdmin.cshtml";
}
<h2>Major List</h2>

<p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createMajorModal">
        Create New Major
    </button>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Major</th>
            <th>Description</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TypeName</td>
                <td>@item.Description</td>
                

                <td>
                    <a class="btn btn-sm btn-info"
                       data-bs-toggle="modal"
                       data-bs-target="#detailsMajorModal"
                       onclick="showMajorDetails('@item.TypeID','@item.TypeName',  '@item.Description' )">
                        Details
                    </a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="TypeID" value="@item.TypeID" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Do you want to delete this major?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade" id="detailsMajorModal" tabindex="-1" aria-labelledby="detailMajorLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Edit" method="post">
                <input type="hidden" id="TypeID" name="TypeID" />
                <div class="modal-header">
                    <h5 class="modal-title" id="createMajorModalLabel">Detail major</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="ClassName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="TypeName" name="TypeName" required />
                    </div>
                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea class="form-control" id="Description" name="Description" rows="3"></textarea>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Edit</button>
                   
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Modal create class -->
<div class="modal fade" id="createMajorModal" tabindex="-1" aria-labelledby="createMajorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="createMajorModalLabel">Create new major</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="ClassName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="TypeName" name="TypeName" required />
                    </div>
                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea class="form-control" id="Description" name="Description" rows="3"></textarea>
                    </div>
                   
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Submit</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>


    function showMajorDetails(id,name, description) {

        $('#TypeID').val(id);
        $('#TypeName').val(name);
        $('#Description').val(description);
       
    }

</script>