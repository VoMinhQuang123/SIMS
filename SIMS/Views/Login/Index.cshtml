@model SIMS.Models.LoginViewModel
@{
    Layout = "~/Views/Login/_Loginlayout.cshtml";
}

<style>
    /* Toàn bộ trang nền nhẹ */
body {
        display: flex; /* Dùng flexbox */
        justify-content: center; 
        align-items: center; 
        height: 100vh; 
        margin: 0;
        background: linear-gradient(135deg, #74ABE2, #5563DE);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.container{
        
        margin: 0 auto;
}
/* Card chính */
.card {
    
    padding : 20px;
    border-radius: 15px;
    overflow: hidden;
    background-color: #fff;
}

/* Tiêu đề Login */
.card-header h3 {
    font-weight: 600;
    color: #333;
}

/* Label và input */
.form-floating label {
    font-size: 14px;
    color: #555;
}

.form-control {
    border-radius: 8px;
    border: 1px solid #ccc;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-control:focus {
    border-color: #5563DE;
    box-shadow: 0 0 5px rgba(85, 99, 222, 0.5);
}

/* Nút Login */
.btn-primary {
    background-color: #5563DE;
    border: none;
    border-radius: 8px;
    padding: 10px 20px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-primary:hover {
    background-color: #3e4ec9;
    transform: translateY(-2px);
}

/* Remember password */
.form-check-label {
    font-size: 14px;
    color: #555;
}

/* Thông báo lỗi */
.text-danger {
    font-size: 13px;
    margin-top: 5px;
    display: block;
}

/* Khoảng cách */
.mb-3 {
    margin-bottom: 1.5rem !important;
}

</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
               
                <div class="card-header">
                   
                    <h3 class="text-center font-weight-light my-4">Login</h3>
                    @if (ViewData["MessageLogin"] != null)
                    {
                        <span class="text-danger">
                            @ViewData["MessageLogin"]
                        </span>
                    }


                </div>


                <div class="card-body">
                    <form method="post" asp-action="Index">
                        <div class="form-floating mb-3">
                            <label for="inputEmail">Email address</label>
                            <input class="form-control" id="inputUsername" type="text" placeholder="name@example.com" asp-for="Username" />
                            
                            <span asp-validation-for="Username" class="test-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <label for="inputPassword">Password</label>
                            <input class="form-control" id="inputPassword" type="password" placeholder="Password" asp-for="Password" />
                            
                            <span asp-validation-for="Password" class="test-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                            <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            
                            <button class="btn btn-primary" type="submit">Login</button>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
</div>